<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pharmacy_privacy_policy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_regular"
                    android:text="Chính sách bảo mật"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_back"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Policy Content -->
            <TextView
                android:id="@+id/textViewPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính sách bảo mật tại Nhà thuốc ABC"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_back" />

            <TextView
                android:id="@+id/textViewContent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I. Mục đích và phạm vi thu thập thông tin"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewPolicy" />

            <TextView
                android:id="@+id/textViewContentDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhà thuốc ABC cam kết bảo vệ quyền riêng tư của người dùng. Mọi thông tin cá nhân của khách hàng sẽ được thu thập một cách hợp pháp và minh bạch. Chúng tôi sử dụng thông tin khách hàng nhằm mục đích xử lý đơn hàng, cải thiện chất lượng dịch vụ và cung cấp thông tin về các chương trình khuyến mãi hoặc sản phẩm mới. Những thông tin này sẽ được lưu trữ một cách an toàn và chỉ sử dụng trong phạm vi đã cam kết."
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent1" />

            <TextView
                android:id="@+id/textViewContent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="II. Các loại thông tin thu thập"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContentDescription1" />

            <TextView
                android:id="@+id/textViewContentDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chúng tôi thu thập các thông tin cá nhân mà bạn cung cấp khi đăng ký tài khoản, thực hiện mua hàng hoặc liên hệ với chúng tôi. Các thông tin bao gồm nhưng không giới hạn ở tên, địa chỉ email, số điện thoại, địa chỉ giao hàng và phương thức thanh toán. Thông tin này sẽ được bảo mật và chỉ sử dụng trong phạm vi cung cấp dịch vụ của Nhà thuốc ABC."
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent2" />

            <TextView
                android:id="@+id/textViewContent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="III. Cách thức sử dụng thông tin"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContentDescription2" />

            <TextView
                android:id="@+id/textViewContentDescription3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chúng tôi sử dụng thông tin cá nhân của bạn để hoàn tất đơn hàng, giao hàng và gửi thông báo liên quan đến dịch vụ. Ngoài ra, thông tin này cũng giúp chúng tôi cung cấp dịch vụ chăm sóc khách hàng và thực hiện các chương trình khuyến mãi, thông báo sản phẩm mới, hay các chiến dịch tiếp thị qua email hoặc thông báo đẩy nếu bạn đồng ý nhận thông tin."
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent3" />

            <TextView
                android:id="@+id/textViewContent4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IV. Quyền lợi của người dùng"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContentDescription3" />

            <TextView
                android:id="@+id/textViewContentDescription4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Người dùng có quyền truy cập, chỉnh sửa và yêu cầu xóa thông tin cá nhân của mình bất cứ lúc nào. Ngoài ra, chúng tôi cam kết không bán hoặc chia sẻ thông tin của người dùng với bên thứ ba mà không có sự đồng ý của người dùng, trừ khi yêu cầu từ cơ quan pháp luật."
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent4" />

            <TextView
                android:id="@+id/textViewContent5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V. Bảo vệ thông tin cá nhân"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContentDescription4" />

            <TextView
                android:id="@+id/textViewContentDescription5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhà thuốc ABC áp dụng các biện pháp bảo mật tiên tiến để bảo vệ thông tin cá nhân của khách hàng khỏi việc truy cập trái phép. Chúng tôi sử dụng mã hóa và bảo mật trong việc truyền tải dữ liệu qua mạng. Các thông tin được lưu trữ trong cơ sở dữ liệu bảo mật và chỉ có nhân viên được ủy quyền mới có quyền truy cập."
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent5" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
