<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.aboutpharmapoly.Privacy_Policy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_corners"
                android:backgroundTint="@color/blue_CE4"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <!-- Phần đầu tiêu đề -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="24dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="20dp">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/arrow_back"
                        android:backgroundTint="@color/white_FFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/be_vietnam_pro_bold"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Chính sách bảo mật"
                        android:textColor="@color/white_FFF"
                        android:layout_marginRight="20dp"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewContent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I. Mục đích và phạm vi thu thập thông tin"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewPolicy" />

            <TextView
                android:id="@+id/textViewContentDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhà thuốc PharmaPoly cam kết bảo vệ quyền riêng tư của người dùng. Mọi thông tin cá nhân của khách hàng sẽ được thu thập một cách hợp pháp và minh bạch. Chúng tôi sử dụng thông tin khách hàng nhằm mục đích xử lý đơn hàng, cải thiện chất lượng dịch vụ hoặc sản phẩm mới. Những thông tin này sẽ được lưu trữ một cách an toàn và chỉ sử dụng trong phạm vi đã cam kết. Chúng tôi cũng có thể sử dụng thông tin này để phân tích và nghiên cứu thị trường, từ đó cải thiện trải nghiệm của người dùng."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent1" />

            <TextView
                android:id="@+id/textViewContent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="II. Các loại thông tin thu thập"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContentDescription1" />

            <TextView
                android:id="@+id/textViewContentDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chúng tôi thu thập các thông tin cá nhân mà bạn cung cấp khi đăng ký tài khoản, thực hiện mua hàng hoặc liên hệ với chúng tôi. Các thông tin bao gồm nhưng không giới hạn ở tên, số điện thoại, địa chỉ giao hàng và phương thức thanh toán. Thông tin này sẽ được bảo mật và chỉ sử dụng trong phạm vi cung cấp dịch vụ của Nhà thuốc PharmaPoly. Ngoài ra, chúng tôi cũng có thể thu thập thông tin từ các nguồn khác để nâng cao chất lượng dịch vụ."
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:srcCompat="@drawable/chinhsachbaomatt" />

            <TextView
                android:id="@+id/textViewContent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="III. Cách thức sử dụng thông tin"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContentDescription2" />

            <TextView
                android:id="@+id/textViewContentDescription3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chúng tôi sử dụng thông tin cá nhân của bạn để hoàn tất đơn hàng, giao hàng và gửi thông báo liên quan đến dịch vụ. Ngoài ra, thông tin này cũng giúp chúng tôi cung cấp dịch vụ chăm sóc khách hàng và thực hiện các chương trình khuyến mãi, thông báo sản phẩm mới, hay các chiến dịch tiếp thị qua email hoặc thông báo đẩy nếu bạn đồng ý nhận thông tin. Chúng tôi cam kết sẽ không sử dụng thông tin này cho bất kỳ mục đích nào khác mà không có sự đồng ý của bạn."
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent3" />

            <TextView
                android:id="@+id/textViewContent4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IV. Quyền lợi của người dùng"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContentDescription3" />

            <TextView
                android:id="@+id/textViewContentDescription4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Người dùng có quyền truy cập, chỉnh sửa và yêu cầu xóa thông tin cá nhân của mình bất cứ lúc nào. Ngoài ra, chúng tôi cam kết không bán hoặc chia sẻ thông tin của người dùng với bên thứ ba mà không có sự đồng ý của người dùng, trừ khi yêu cầu từ cơ quan pháp luật. Chúng tôi cũng cung cấp cho người dùng các công cụ để kiểm soát thông tin cá nhân của họ và đảm bảo rằng họ có thể dễ dàng quản lý quyền riêng tư của mình."
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent4" />

            <TextView
                android:id="@+id/textViewContent5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V. Bảo vệ thông tin cá nhân"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContentDescription4" />

            <TextView
                android:id="@+id/textViewContentDescription5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhà thuốc PharmaPoly áp dụng các biện pháp bảo mật tiên tiến để bảo vệ thông tin cá nhân của khách hàng khỏi việc truy cập trái phép. Chúng tôi sử dụng mã hóa và bảo mật trong việc truyền tải dữ liệu qua mạng. Các thông tin được lưu trữ trong cơ sở dữ liệu bảo mật và chỉ có nhân viên được ủy quyền mới có quyền truy cập. Chúng tôi cũng thường xuyên kiểm tra và cập nhật các biện pháp bảo mật để đảm bảo rằng thông tin của bạn luôn được bảo vệ an toàn."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/textViewContent5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abc"
                android:textSize="35dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textView3_4_1" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
