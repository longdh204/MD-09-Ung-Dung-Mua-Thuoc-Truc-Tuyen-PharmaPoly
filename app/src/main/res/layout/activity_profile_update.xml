<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.view.activity.ProfileUpdate">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_regular"
                    android:text="Thông tin cá nhân"
                    android:textColor="@color/blue"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_user_avatar"
                app:shapeAppearance="@style/FullCornerImageView"
                android:layout_marginTop="56dp"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:scaleType="centerCrop"
                android:src="@drawable/perfil"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/edit_images"
                android:layout_marginTop="-30dp"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_avatar"
                android:fontFamily="@font/overpass_regular"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:ellipsize="end"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_marginTop="24dp"
                android:paddingHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name"
                    android:textStyle="bold"
                    android:textColor="@color/black_333"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/update_profile_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/borderm"
                    android:fontFamily="@font/be_vietnam_pro_medium"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_DCD"
                    android:textSize="13sp"
                    android:paddingHorizontal="24dp"
                    android:hint="@string/full_name"/>
            </LinearLayout>


            <LinearLayout
                android:paddingHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textStyle="bold"
                    android:textColor="@color/black_333"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/update_profile_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/borderm"
                    android:fontFamily="@font/be_vietnam_pro_medium"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_DCD"
                    android:textSize="13sp"
                    android:paddingHorizontal="24dp"
                    android:hint="@string/phone_number"/>
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipping_phone"
                    android:textStyle="bold"
                    android:textColor="@color/black_333"
                    android:textSize="16sp"/>

                <EditText
                    android:layout_marginTop="6dp"
                    android:id="@+id/update_profile_shipping_phone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/borderm"
                    android:fontFamily="@font/be_vietnam_pro_medium"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_DCD"
                    android:textSize="13sp"
                    android:paddingHorizontal="24dp"
                    android:hint="@string/shipping_phone"
                    android:inputType="phone"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textStyle="bold"
                    android:textColor="@color/black_333"
                    android:textSize="16sp"/>

                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/update_profile_rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@string/male"/>

                    <RadioButton
                        android:id="@+id/update_profile_rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@string/female"/>
                    <RadioButton
                        android:id="@+id/update_profile_rb_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@string/other"/>
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:layout_marginTop="24dp">
                <TextView
                    android:drawableTint="@color/black_333"
                    android:drawableEnd="@drawable/ic_calendar_2"
                    android:id="@+id/tvDateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:padding="12dp"
                    android:background="@drawable/custom_input_background"
                    android:fontFamily="@font/be_vietnam_pro_medium"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_DCD"
                    android:text="@string/date_of_birth"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="24dp"
                android:id="@+id/btn_update_profile"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/nav_background"
                app:cardCornerRadius="32dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/profile_update_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/be_vietnam_pro_bold"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
