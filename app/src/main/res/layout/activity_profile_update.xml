<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="48dp"
    android:layout_marginBottom="56dp"
    android:layout_marginHorizontal="36dp"
    android:orientation="vertical"
    tools:context=".ui.view.activity.ProfileUpdate">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_arrow_back1"
        android:backgroundTint="@color/black_333"/>

    <TextView
        android:layout_marginTop="56dp"
        android:fontFamily="@font/be_vietnam_pro_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textColor="@color/black_333"
        android:textSize="24sp"/>

    <TextView
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textStyle="bold"
        android:textColor="@color/black_333"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/update_profile_full_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/custom_input_background"
        android:fontFamily="@font/be_vietnam_pro_medium"
        android:textColor="@color/black_333"
        android:textColorHint="@color/gray_DCD"
        android:textSize="16sp"
        android:paddingHorizontal="24dp"
        android:hint="Enter Full Name"/>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textStyle="bold"
        android:textColor="@color/black_333"
        android:textSize="16sp"/>

    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/update_profile_rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>

        <RadioButton
            android:id="@+id/update_profile_rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
    </RadioGroup>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textStyle="bold"
        android:textColor="@color/black_333"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/update_profile_phone_number"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/custom_input_background"
        android:fontFamily="@font/be_vietnam_pro_medium"
        android:textColor="@color/black_333"
        android:textColorHint="@color/gray_DCD"
        android:textSize="16sp"
        android:paddingHorizontal="24dp"
        android:hint="Enter Phone Number"
        android:inputType="phone"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_update_profile"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardBackgroundColor="@color/gray_DCD"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/profile_update_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/be_vietnam_pro_bold"
                android:text="Update"
                android:textColor="@color/gray_E9E"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
