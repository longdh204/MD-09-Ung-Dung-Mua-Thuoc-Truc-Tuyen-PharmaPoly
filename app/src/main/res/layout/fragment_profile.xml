<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.fragment.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_6f4">
        <LinearLayout
            android:background="@color/blue_CE4"
            android:paddingHorizontal="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="24dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_user_avatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/default_avatar"/>
            <LinearLayout
                android:paddingLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:fontFamily="@font/be_vietnam_pro_semibold"
                    android:textSize="18sp"
                    android:textColor="@color/white_FFF"
                    android:ellipsize="end"
                    android:text="@string/customer"/>
                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:fontFamily="@font/be_vietnam_pro_light"
                    android:textSize="14sp"
                    android:textColor="@color/white_FFF"
                    android:ellipsize="end"
                    android:text="+8466666666"/>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingBottom="108dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/be_vietnam_pro_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_orders"
                        android:textColor="@color/black_333"
                        android:textSize="14sp"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/btn_view_all"
                        android:fontFamily="@font/be_vietnam_pro_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:textColor="@color/blue_CE4"
                        android:textSize="14sp"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_6f4"
                    app:cardCornerRadius="12dp">
                    <LinearLayout
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/btn_processing"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_box"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/processing"
                                android:textColor="@color/black_333"
                                android:fontFamily="@font/be_vietnam_pro_semibold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_shipping"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_delivery"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shipping"
                                android:textColor="@color/black_333"
                                android:fontFamily="@font/be_vietnam_pro_semibold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_delivered"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_unbox"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/delivered"
                                android:textColor="@color/black_333"
                                android:fontFamily="@font/be_vietnam_pro_semibold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_exchange_return"
                            android:gravity="center_horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_change"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exchange_return"
                                android:textColor="@color/black_333"
                                android:fontFamily="@font/be_vietnam_pro_semibold"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/be_vietnam_pro_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account"
                        android:textColor="@color/black_333"
                        android:textSize="14sp"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_6f4"
                    app:cardCornerRadius="12dp">
                    <LinearLayout
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/btn_personal_info"
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_user_circle"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/personal_info"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_manage_address"
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:scaleX="1.6"
                                android:scaleY="1.6"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_address"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/manage_address"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_card"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/manage_cards"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/be_vietnam_pro_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_pharmapoly"
                        android:textColor="@color/black_333"
                        android:textSize="14sp"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_6f4"
                    app:cardCornerRadius="12dp">
                    <LinearLayout
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_info_square"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/pharmacy_intro"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_cog_gear_cogwheel"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/business_license"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_deposit"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/deposit_policy"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_pen"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/content_policy"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_return"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/medicine_return_policy"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_delivery"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/shipping_policy"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_shield_check"
                                android:backgroundTint="@color/blue_CE4"/>
                            <TextView
                                android:textSize="16sp"
                                android:fontFamily="@font/be_vietnam_pro_medium"
                                android:lines="1"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/privacy_policy"
                                android:textColor="@color/black_333"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_arrow_right"/>
                        </LinearLayout>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginVertical="24dp"

                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_logout"
                        android:rotation="180"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:backgroundTint="@color/black_333"
                        android:background="@drawable/ic_logout"/>
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/be_vietnam_pro_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>