<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="48dp"
    android:layout_marginBottom="56dp"
    android:layout_marginHorizontal="36dp"
    android:orientation="vertical"
    tools:context=".ui.view.activity.SignupPassword">
    <ImageButton
        android:id="@+id/btn_back"
        android:backgroundTint="@color/black_333"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_arrow_back1"/>

    <TextView
        android:layout_marginTop="56dp"
        android:fontFamily="@font/be_vietnam_pro_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_password"
        android:textColor="@color/black_333"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tv_phone_number"
        android:fontFamily="@font/be_vietnam_pro_light"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_requirements"
        android:textColor="@color/gray_E9E"
        android:textSize="14sp"/>
    <TextView
        android:layout_marginTop="108dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_password"
        android:textStyle="bold"
        android:fontFamily="@font/be_vietnam_pro_medium"
        android:textColor="@color/black_333"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/edt_new_password"
        android:lines="1"
        android:inputType="textPassword"
        android:fontFamily="@font/be_vietnam_pro_medium"
        android:textColor="@color/black_333"
        android:textColorHint="@color/gray_DCD"
        android:textSize="16sp"
        android:paddingHorizontal="24dp"
        android:hint="@string/enter_new_password"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/custom_input_background"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_password"
        android:fontFamily="@font/be_vietnam_pro_medium"
        android:textColor="@color/black_333"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/edt_confirm_password"
        android:lines="1"
        android:inputType="textPassword"
        android:fontFamily="@font/be_vietnam_pro_medium"
        android:textColor="@color/black_333"
        android:textColorHint="@color/gray_DCD"
        android:textSize="16sp"
        android:paddingHorizontal="24dp"
        android:hint="@string/reenter_new_password"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/custom_input_background"/>

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/red_757"
        android:fontFamily="@font/be_vietnam_pro_light"
        android:text="*Error Message"
        android:textSize="14sp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_create_account"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardBackgroundColor="@color/gray_DCD"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/be_vietnam_pro_bold"
                android:text="@string/complete"
                android:textColor="@color/gray_E9E"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>