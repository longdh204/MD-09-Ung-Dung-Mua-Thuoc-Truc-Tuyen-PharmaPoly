<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.aboutpharmapoly.pharmacy_introduction">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"> <!-- Thêm fillViewport -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_corners"
                android:backgroundTint="@color/blue_CE4"
                android:orientation="vertical">
                <!-- Phần đầu tiêu đề -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="24dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="20dp">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/arrow_back"
                        android:backgroundTint="@color/white_FFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/be_vietnam_pro_bold"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Giới thiệu nhà thuốc"
                        android:textColor="@color/white_FFF"
                        android:layout_marginRight="20dp"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:text="I. Về chúng tôi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:layout_marginRight="30dp"
                    android:text="Nhà thuốc PharmaPoly được thành lập với sứ mệnh mang đến cho cộng đồng một nguồn cung cấp dược phẩm chất lượng, an toàn và hiệu quả. Chúng tôi tự hào là địa chỉ tin cậy cho người tiêu dùng trong việc cung cấp các sản phẩm thuốc, thực phẩm chức năng, và các dịch vụ chăm sóc sức khỏe. Với đội ngũ dược sĩ chuyên nghiệp, giàu kinh nghiệm, chúng tôi cam kết cung cấp dịch vụ chăm sóc sức khỏe tận tâm, hỗ trợ khách hàng mọi lúc, mọi nơi. Chúng tôi không chỉ cung cấp các sản phẩm thuốc mà còn hướng dẫn khách hàng sử dụng thuốc một cách an toàn và hiệu quả nhất, đồng thời tư vấn về các phương pháp chăm sóc sức khỏe toàn diện."
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:srcCompat="@drawable/introductionpharma" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="II. Sứ mệnh"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:textSize="15sp"
                    android:text="Sứ mệnh của Nhà thuốc PharmaPoly là nâng cao chất lượng cuộc sống của cộng đồng thông qua việc cung cấp các sản phẩm dược phẩm chất lượng cao, đảm bảo an toàn và hiệu quả. Chúng tôi luôn đặt lợi ích của khách hàng lên hàng đầu, mang đến những sản phẩm và dịch vụ chăm sóc sức khỏe tốt nhất để giúp mọi người sống khỏe mạnh và hạnh phúc hơn. Nhà thuốc PharmaPoly cam kết cải tiến và phát triển không ngừng, đáp ứng mọi nhu cầu chăm sóc sức khỏe của khách hàng. Chúng tôi tin rằng sức khỏe là tài sản quý giá nhất và chúng tôi sẽ không ngừng nỗ lực để bảo vệ và nâng cao sức khỏe của từng cá nhân trong cộng đồng."
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:text="III. Giá trị cốt lõi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView28" />

                <TextView
                    android:id="@+id/textView3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="1. Chất Lượng"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView3_1_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:textSize="15sp"
                    android:text="Chúng tôi cam kết cung cấp những sản phẩm dược phẩm chất lượng cao nhất, được kiểm định và chứng nhận bởi các cơ quan y tế uy tín. Đội ngũ dược sĩ của chúng tôi luôn sẵn sàng tư vấn, cung cấp thông tin và hỗ trợ khách hàng trong việc lựa chọn sản phẩm phù hợp với nhu cầu và tình trạng sức khỏe của mình."
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3_1" />

                <TextView
                    android:id="@+id/textView3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="2. Tận Tâm"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3_1_1" />

                <TextView
                    android:id="@+id/textView3_2_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:textSize="15sp"
                    android:text="Đội ngũ nhân viên của Nhà thuốc PharmaPoly luôn sẵn sàng hỗ trợ và tư vấn nhiệt tình, mang đến sự hài lòng tuyệt đối cho khách hàng. Chúng tôi hiểu rằng mỗi khách hàng đều có những nhu cầu và mong muốn riêng, vì vậy chúng tôi luôn lắng nghe và đáp ứng nhanh chóng, hiệu quả để đảm bảo mọi khách hàng đều được phục vụ tốt nhất."
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3_2"
                    app:srcCompat="@drawable/gaitricotloi" />

                <TextView
                    android:id="@+id/textView3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="3. Chuyên Nghiệp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3_2_2" />

                <TextView
                    android:id="@+id/textView3_3_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:text="Chúng tôi không ngừng nâng cao trình độ chuyên môn của đội ngũ dược sĩ, giúp khách hàng nhận được những lời khuyên chính xác và phù hợp nhất. Đội ngũ của chúng tôi thường xuyên tham gia các khóa đào tạo và hội thảo chuyên môn để cập nhật kiến thức mới nhất và cung cấp dịch vụ tốt nhất cho khách hàng."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3_3" />

                <TextView
                    android:id="@+id/textView3_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="4. Đổi mới"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3_3_3" />

                <TextView
                    android:id="@+id/textView3_4_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:text="Nhà thuốc PharmaPoly luôn đổi mới và sáng tạo trong việc cung cấp các sản phẩm và dịch vụ nhằm đáp ứng nhu cầu ngày càng cao của khách hàng. Chúng tôi không ngừng nghiên cứu và phát triển các sản phẩm mới, cải tiến quy trình phục vụ, nhằm mang lại trải nghiệm tốt nhất cho khách hàng. Chúng tôi tin rằng sự đổi mới không chỉ giúp nâng cao chất lượng dịch vụ mà còn góp phần vào sự phát triển bền vững của nhà thuốc."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3_4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="abc"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/textView3_4_1" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
