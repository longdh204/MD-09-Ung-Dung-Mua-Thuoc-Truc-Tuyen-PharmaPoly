<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_marginRight="15dp">

    <TextView
        android:id="@+id/txt_pharmacy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên nhà thuốc"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cách bạn 0 km"
        android:textSize="16sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/txt_pharmacy_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vị trí nhà thuốc"
        android:textSize="5sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem chỉ đường"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="0dp" />
</LinearLayout>