    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:text="@string/account_registration_prompt"-->
    <!--            android:textColor="@color/black_333"-->
    <!--            android:textSize="16sp"-->
    <!--            android:layout_marginRight="6dp"/>-->
