<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".contact_support">

    <!-- Tiêu đề -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Back"
            android:padding="4dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Liên hệ và Hỗ trợ"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Hình đại diện -->
    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Avatar"
        android:src="@drawable/persion_connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <!-- Tư vấn mua hàng -->
    <TextView
        android:id="@+id/tv_consulting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Tư vấn mua hàng (Miễn phí)"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarImage" />

    <Button
        android:id="@+id/btn_call_consulting"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:text="📞 Gọi ngay 11122004 - Cs1"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_consulting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Góp ý, Khiếu nại -->
    <TextView
        android:id="@+id/tv_complaints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Góp ý, Khiếu nại (8h00 - 22h00)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_call_consulting"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_call_complaints"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:text="📞 Gọi ngay 11122004 - Cs1"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_complaints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Nhắn tin -->
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhắn tin (8h00 - 22h00)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_call_complaints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_message"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:text="📞 Nhắn tin"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        />

    <!-- Mô tả hỗ trợ trên nền tảng -->
    <TextView
        android:id="@+id/tv_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PharmaPoly đã có mặt trên mọi nền tảng,\nbạn có thể nhắn tin và theo dõi ngay."
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Biểu tượng mạng xã hội -->
    <LinearLayout
        android:id="@+id/socialIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_social"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/btn_facebook"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_facebook"
            android:contentDescription="Facebook"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/btn_zalo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_zalo"
            android:contentDescription="Zalo"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/btn_tiktok"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_tiktok"
            android:contentDescription="TikTok" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
