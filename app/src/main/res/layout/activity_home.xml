<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:background="@color/blue">

            <!-- Thanh tiêu đề -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/blue"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Icon Menu -->
                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:padding="1dp"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="330dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_logo"
                    app:layout_constraintStart_toEndOf="@id/menu_icon"
                    app:layout_constraintEnd_toStartOf="@id/bell_icon" />

                <!-- Icon Chuông -->
                <ImageView
                    android:id="@+id/bell_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bell"
                    android:padding="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="end"

                    />
            </androidx.appcompat.widget.Toolbar>

            <!-- Phần chào mừng -->
            <TextView
                android:id="@+id/txt_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Rahul"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/overpass_regular"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/txt_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Nilkanth Medical Store"
                android:textSize="14sp"
                android:fontFamily="@font/overpass_regular"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/txt_greeting"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp" />

            <!-- Thanh tìm kiếm -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintTop_toBottomOf="@id/txt_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp">
                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_search"
                    android:layout_margin="10dp"
                    android:padding="1dp"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Tìm Kiếm"
                    android:paddingStart="56dp"
                    android:background="@android:color/transparent"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="220dp"
            android:background="@drawable/bgr_fagrment">

            <!-- RecyclerView cho danh mục -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCategories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ViewPager2 cho Slider -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerSlider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@id/dotsIndicator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewCategories" />

            <!-- Dots indicator for ViewPager2 -->
            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/viewPagerSlider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="-30dp">

            </me.relex.circleindicator.CircleIndicator3>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/viewPagerSlider"
                tools:layout_editor_absoluteX="208dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:context=".ui.view.activity.MainActivity">

            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/viewPagerMain"/>
            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottomAppBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_CE4"
                app:fabCradleMargin="24dp"
                app:fabAlignmentMode="center"
                app:fabAnchorMode="cradle"
                app:fabCradleRoundedCornerRadius="56dp"
                android:layout_gravity="bottom">
                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottomNavigationMain"
                    app:itemActiveIndicatorStyle="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:labelVisibilityMode="unlabeled"
                    android:background="@color/transparent"
                    android:elevation="0dp"
                    app:itemRippleColor="@color/transparent"
                    app:itemIconTint="@color/bottom_nav_color"
                    app:menu="@menu/bottom_menu"/>
            </com.google.android.material.bottomappbar.BottomAppBar>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_anchor="@id/bottomAppBar"
                android:backgroundTint="@color/blue_CE4"
                app:shapeAppearanceOverlay="@style/RoundedFAB"
                app:tint="@color/white_FFF"
                android:src="@drawable/ic_headphones"
                app:maxImageSize="32dp"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>