<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/transparent">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:background="@drawable/avatar_background"
        android:clipToOutline="true" />

    <!-- Khung chat -->
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:id="@+id/chat_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bot_message"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat hereChat here"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:fontFamily="@font/overpass_regular" />
    </LinearLayout>

</LinearLayout>
