<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="12dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_product"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="12dp"
            app:shapeAppearance="@style/CornerImageView10dp"
            android:src="@color/blue"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_product_name"
                android:fontFamily="@font/be_vietnam_pro_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minLines="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginRight="12dp"
                android:text="Product Name Product Name Product Name Product Name Product NameProduct NameProduct NameProduct NameProduct NameProduct NameProduct Name"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_original_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="1"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black_333"
                        android:textSize="16sp"
                        android:fontFamily="@font/be_vietnam_pro_bold"
                        android:text="666.666đ"/>
<!--                    <TextView-->
<!--                        android:id="@+id/tv_original_price"-->
<!--                        android:visibility="gone"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:minLines="1"-->
<!--                        android:maxLines="2"-->
<!--                        android:ellipsize="end"-->
<!--                        android:textColor="@color/gray_E9E"-->
<!--                        android:textSize="12sp"-->
<!--                        android:fontFamily="@font/be_vietnam_pro_bold"-->
<!--                        android:text="666.666đ"/>-->
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333"
                    android:textSize="12sp"
                    android:fontFamily="@font/be_vietnam_pro_bold"
                    android:text="x2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>