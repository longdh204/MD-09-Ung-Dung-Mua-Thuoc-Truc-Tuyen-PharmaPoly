<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Định nghĩa viền -->
    <solid android:color="#FFFFFF" />  <!-- Màu nền bên trong (tùy chọn) -->

    <!-- Viền -->
    <stroke
        android:color="#BDBDBD"
    android:width="1dp" />

    <!-- Bo góc -->
    <corners android:radius="8dp" /> <!-- Bo tròn các góc -->

    <!-- Đổ bóng (optional) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />  <!-- Khoảng cách giữa viền và nội dung bên trong -->
</shape>
