<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> <!-- Màu nền -->
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp"/> <!-- Bo góc trên -->
            <stroke
                android:width="2dp"
            android:color="@color/blue"/> <!-- Màu viền -->
        </shape>
    </item>
    <item android:top="0dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"> <!-- Màu viền dưới -->
                <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/> <!-- Không bo góc dưới -->
            </solid>
            <size android:height="4dp"/> <!-- Độ dày viền dưới -->
        </shape>
    </item>
</layer-list>